<Page loaded="pageLoaded">
	<Page.actionBar>
    	<ActionBar title="Register"></ActionBar>
	</Page.actionBar>
    <StackLayout orientation="vertical">
		<Image src="res://icon" stretch="none" horizontalAlignment="center"/>
        <TextField id="email" text="{{ email }}" hint="Email" />
		<TextField id="password" secure="true" text="{{ password }}" hint="Password" />

        <Button text="Register" tap="register" />
    </StackLayout>
</Page>