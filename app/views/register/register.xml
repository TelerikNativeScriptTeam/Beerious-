<Page loaded="pageLoaded">
	<Page.actionBar>
    	<ActionBar title="Register"></ActionBar>
	</Page.actionBar>
    <StackLayout orientation="vertical">
    	<Image src="res://Default" height="10" stretch="none" horizontalAlignment="center"/>
        <TextField id="username" text="{{ username }}" hint="Username" />
		<TextField id="password" secure="true" text="{{ password }}" hint="Password" />

        <Button text="Register" tap="register" />
    </StackLayout>
</Page>